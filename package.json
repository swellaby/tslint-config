{
    "private": true,
    "name": "@swellaby/tslint-configs",
    "description": "Our tslint configuration modules",
    "author": {
        "name": "Swellaby",
        "email": "opensource@swellaby.com",
        "url": "http://swellaby.com"
    },
    "contributors": [
        {
            "name": "Caleb Cartwright",
            "url": "https://github.com/calebcartwright"
        }
    ],
    "license": "MIT",
    "devDependencies": {
        "@swellaby/eslint-config-recommended": "^0.0.15",
        "chai": "^4.1.2",
        "eslint": "^4.19.1",
        "mocha": "^5.0.5",
        "mocha-multi": "^1.0.1",
        "ncp": "^2.0.0",
        "rimraf": "^2.6.2"
    },
    "scripts": {
        "build": "npm run lint && npm run test:all",
        "build:base": "npm run lint:base && npm run test:base",
        "lint": "eslint **/*.js",
        "lint:base": "eslint base/**/*.js",
        "test:all": "npm run test:base",
        "test:base": "rimraf base/.testresults/ && mocha --opts base/test/mocha.opts",
        "license:base": "ncp LICENSE base/LICENSE",
        "version:base": "cd base && npm --no-git-tag-version version patch",
        "prepub:base": "npm run build:base && npm run license:base && npm run version:base",
        "prepub:all": "npm run prepub:base",
        "publish:base": "npm run prepub:base && cd base && npm publish --access public",
        "publish:all": "npm run publish:base && npm run publish:cc && npm run publish:pc"
    }
}
